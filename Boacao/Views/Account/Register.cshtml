@model Boacao.ViewModels.RegisterVM
@{
  ViewData["Title"] = "Registro";
  Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="page-header align-items-start min-vh-100"
  style="background-image: url('https://thumbs.dreamstime.com/b/charity-donation-toys-clothes-money-food-cartoons-vector-illustration-graphic-design-143186375.jpg');">
  <span class="mask bg-gradient-dark opacity-6"></span>
  <div class="container my-auto">
    <div class="row">
      <div class="col-lg-4 col-md-8 col-12 mx-auto">
        <div class="card z-index-0 fadeIn3 fadeInBottom">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-warning shadow-warning border-radius-lg py-3 pe-1 text-center">
              <h4 class="text-black font-weight-bolder text-center mt-2 mb-0">Registro</h4>
              <h5 class="text-black font-weight-bolder text-center mt-2 mb-2">Crie sua Conta para Doar</h5>
            </div>
          </div>
          <div class="card-body">
            <form asp-action="Login" method="POST" role="form" class="text-start">
              <div asp-validation-summary="ModelOnly" class="text-danger" hidden></div>
              <div class="col-12 mb-3">
                <div class="input-group input-group-outline mb-1">
                  <label asp-for="Email" class="form-label"></label>
                  <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger text-sm"></span>
              </div>
              <div class="col-12 mb-3">
                <div class="input-group input-group-outline mb-1">
                  <label asp-for="Senha" class="form-label"></label>
                  <input asp-for="Senha" class="form-control" />
                </div>
                <span asp-validation-for="Senha" class="text-danger text-sm"></span>
              </div>
              <div class="col-12 mb-3">
                <div class="input-group input-group-outline mb-1">
                  <label asp-for="ConfirmarSenha" class="form-label"></label>
                  <input asp-for="ConfirmarSenha" class="form-control" />
                </div>
                <span asp-validation-for="ConfirmarSenha" class="text-danger text-sm"></span>
              </div>
              <div class="text-center">
                <button type="submit" class="btn bg-gradient-warning w-100 my-4 mb-2">Criar</button>
              </div>
              <p class="mt-4 text-sm text-center">
                JÃ¡ possui uma conta? 
                <a asp-action="Login" class="text-warning text-gradient font-weight-bold">Entre Aqui</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    let mensagemErro = '';
    $('.validation-summary-errors ul li').each(function () {
      mensagemErro += $(this).text();
    });
    if (mensagemErro != '') {
      Swal.fire({
        title: "Problemas ao Criar Conta",
        text: mensagemErro,
        icon: "error",
        confirmButtonColor: "#FB8C00"
      });
    }
  </script>
}