@model Boacao.ViewModels.LoginVM
@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="page-header align-items-start min-vh-100"
  style="background-image: url('https://thumbs.dreamstime.com/b/charity-donation-toys-clothes-money-food-cartoons-vector-illustration-graphic-design-143186375.jpg'); background-size: contain;">
  <span class="mask bg-gradient-secondary opacity-6"></span>
  <div class="container my-auto">
    <div class="row">
      <div class="col-lg-4 col-md-8 col-12 mx-auto">
        <div class="card z-index-0 fadeIn3 fadeInBottom">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-secondary border-radius-lg py-3 pe-1 text-center">
              <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Login</h4>
              <h5 class="text-white font-weight-bolder text-center mt-2 mb-2">Acesso a Área de Doações</h5>
            </div>
          </div>
          <div class="card-body">
            <form asp-action="Login" method="POST" role="form" class="text-start">
              <div asp-validation-summary="ModelOnly" class="text-danger" hidden></div>
              <input type="hidden" asp-for="UrlRetorno">
              <div class="col-12 mb-3">
                <div class="input-group input-group-outline mb-1">
                  <label asp-for="Email" class="form-label"></label>
                  <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger text-sm"></span>
              </div>
              <div class="col-12 mb-3">
                <div class="input-group input-group-outline mb-1">
                  <label asp-for="Senha" class="form-label"></label>
                  <input asp-for="Senha" class="form-control" />
                </div>
                <span asp-validation-for="Senha" class="text-danger text-sm"></span>
              </div>
              <div class="form-check form-switch d-flex align-items-center mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Lembrar">
                <label class="form-check-label mb-0 ms-3" asp-for="Lembrar"></label>
              </div>
              <div class="text-center">
                <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Entrar</button>
              </div>
              <p class="mt-4 text-sm text-center">
                Não possui uma conta?
                <a asp-action="Register" class="text-primary text-gradient font-weight-bold">Cadastrar-se</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    let mensagemErro = '';
    $('.validation-summary-errors ul li').each(function () {
      mensagemErro += $(this).text();
    });
    if (mensagemErro != '') {
      Swal.fire({
        title: "Acesso Negado",
        text: mensagemErro,
        icon: "error",
        confirmButtonColor: "#FB8C00"
      });
    }
  </script>
}